{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Debug app",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:debug"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            "console": "internalConsole",
            "outputCapture": "std",
        },
        {
            "name": "Launch Prod app",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:prod"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            "console": "internalConsole",
            "outputCapture": "std",
        }
    ]
}